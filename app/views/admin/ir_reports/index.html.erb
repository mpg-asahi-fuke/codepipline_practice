<div class="container mt-4">
    <h1>書類一覧</h1>

    <div class="row mb-4">
        <div class="col">
            <%= form_with url: admin_documents_path, method: :get, class: 'form-inline', local: true do |f| %>
                <div class="input-group">
                    <%= f.text_field :search, value: params[:search], class: 'form-control', placeholder: '検索...' %>
                    <div class="input-group-append">
                        <%= f.submit '検索', class: 'btn btn-outline-secondary' %>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="col-auto">
            <%= link_to '新規作成', new_admin_document_path, class: 'btn btn-primary' %>
        </div>
    </div>

    <% if @documents.present? %>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>タイトル</th>
                        <th>作成日</th>
                        <th>更新日</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% @documents.each do |document| %>
                        <tr>
                            <td><%= document.title %></td>
                            <td><%= document.created_at.strftime('%Y/%m/%d %H:%M') %></td>
                            <td><%= document.updated_at.strftime('%Y/%m/%d %H:%M') %></td>
                            <td>
                                <%= link_to '表示', admin_document_path(document), class: 'btn btn-sm btn-info' %>
                                <%= link_to '編集', edit_admin_document_path(document), class: 'btn btn-sm btn-warning' %>
                                <%= link_to '削除', admin_document_path(document), method: :delete, data: { confirm: '本当に削除しますか?' }, class: 'btn btn-sm btn-danger' %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        
        <div class="pagination justify-content-center">
            <%= paginate @documents if defined?(paginate) %>
        </div>
    <% else %>
        <div class="alert alert-info">
            書類が見つかりませんでした。
        </div>
    <% end %>
</div>